// Example showcasing both Auto keyword and Display function
// This demonstrates the ease of use of the Rubber Duck scripting language

Auto greeting = "Welcome to Rubber Duck Script!";
Auto version = 1.0;
Auto isEasyToUse = true;

Display(greeting);
Display("Version: " + version);
Display("Is easy to use: " + isEasyToUse);

// Mathematical operations
Auto x = 15;
Auto y = 25;
Auto sum = x + y;
Auto difference = y - x;
Auto product = x * y;
Auto quotient = y / x;

Display("Mathematical Operations:");
Display("Sum: " + sum);
Display("Difference: " + difference);
Display("Product: " + product);
Display("Quotient: " + quotient);

// String operations
Auto firstName = "Rubber";
Auto lastName = "Duck";
Auto fullName = firstName + " " + lastName;
Display("Full name: " + fullName);